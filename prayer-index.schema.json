{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prayer Index Schema",
  "description": "Defines the structure for the main prayer list.",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "prayer-id": { "type": "string" },
            "file": { "type": "string", "format": "uri-reference" },
            "hebrew": { "type": "string" },
            "english": { "type": "string" }
          },
          "required": ["prayer-id", "file", "hebrew", "english"]
        }
      }
    }
  }
}
