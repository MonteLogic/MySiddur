{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "#/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "@MySiddur/core": [
        "./packages/core/lib/index.ts"
      ],
      "@MySiddur/core/*": [
        "./packages/core/lib/*"
      ],
      "@MySiddur/prayer": [
        "./packages/prayer/index.ts"
      ],
      "@MySiddur/prayer/*": [
        "./packages/prayer/*"
      ],
      "@MySiddur/network": [
        "./packages/network/index.ts"
      ],
      "@MySiddur/network/*": [
        "./packages/network/*"
      ],
      "@MySiddur/ui": [
        "./packages/ui/index.ts"
      ],
      "@MySiddur/ui/*": [
        "./packages/ui/*"
      ],
      "@MySiddur/scripts": [
        "./packages/scripts/index.ts"
      ],
      "@MySiddur/scripts/*": [
        "./packages/scripts/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/types/**/*.ts"
  ]
}